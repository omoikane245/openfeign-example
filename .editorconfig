# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 140

[*.kt]
indent_style = tab
indent_size = 4
tab_width = 4

[build.gradle.kts]
indent_size = 4

[*.bat]
end_of_line = crlf
